generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid()) // CUID é melhor que UUID para URLs e indexação
  title       String
  description String
  imageUrl    String
  link        String
  color       String
  tags        String[] // Array nativo do Postgres
  deployUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects") // Boas práticas: tabelas em minúsculo e plural no banco
}